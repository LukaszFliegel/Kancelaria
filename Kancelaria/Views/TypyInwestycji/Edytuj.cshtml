@model TypInwestycji

@{
    ViewBag.Title = "Edycja typu inwestycji";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Edycja typu inwestycji \"{0}\"", Model.KodTypuInwestycji), SubTitle = "Edytuj typ inwestycji." })
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Typ inwestycji</legend>

        @Html.HiddenFor(model => model.Id)

        @Html.Partial("_TypInwestycji", Model)

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do kartoteki", "Kartoteka")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
