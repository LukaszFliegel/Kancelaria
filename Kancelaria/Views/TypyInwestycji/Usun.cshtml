@model TypInwestycji

@{
    ViewBag.Title = "Usuwanie typu inwestycji";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Usuwanie typu inwestycji \"{0}\"", Model.KodTypuInwestycji), SubTitle = "Usuń typ inwestycji." })
}

<h3>Czy na pewno chcesz usunąć typ inwestycji?</h3>
<h4>@Model.KodTypuInwestycji</h4>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        @Html.HiddenFor(model => model.Id)

        <input type="submit" value="Usuń" />
    </p>
}

@Html.ActionLink("Powrót do kartoteki", "Kartoteka")