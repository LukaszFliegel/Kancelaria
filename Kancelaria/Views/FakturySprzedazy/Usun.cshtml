@model FakturaSprzedazy

@{
    ViewBag.Title = "Usuwanie faktury sprzedaży";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Usuwanie faktury sprzedaży \"{0}\"", Model.NumerFaktury), SubTitle = "Usuń fakturę sprzedaży." })
}
<h3>Czy na pewno chcesz usunąć fakturę sprzedaży?</h3>
<h4>@Model.NumerFaktury</h4>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        @Html.HiddenFor(model => model.Id)

        <input type="submit" value="Usuń" />
    </p>
}

@Html.ActionLink("Powrót do kartoteki", "Kartoteka")