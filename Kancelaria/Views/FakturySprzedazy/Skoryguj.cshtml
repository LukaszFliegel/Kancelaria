@model FakturaSprzedazy

@{
    ViewBag.Title = "Korygowanie faktury sprzedaży";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Korygowanie faktury sprzedaży \"{0}\"", Model.NumerFaktury), SubTitle = "Skoryguj fakturę sprzedaży." })
}
<h3>Czy na pewno chcesz stworzyć korektę fakturę sprzedaży?</h3>
<h4>@Model.NumerFaktury</h4>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        @Html.HiddenFor(model => model.Id)

        <input type="submit" value="Utwórz korektę" />
    </p>
}

@Html.ActionLink("Powrót do kartoteki", "Kartoteka")
