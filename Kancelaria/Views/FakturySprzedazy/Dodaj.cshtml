@model FakturaSprzedazy

@{
    ViewBag.Title = "Dodawanie nowej faktury sprzedaży";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = "Dodawanie faktury sprzedaży.", SubTitle = "Dodaj nową fakturę sprzedaży. Dodawanie pozycji będzie możliwe po zapisaniu faktury." })
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Faktura sprzedaży</legend>



        @Html.Partial("_FakturaSprzedazy", Model)

        <hr />
        @*<h3>Pozycje faktury</h3>
        @Html.Partial("_PozycjeFakturySprzedazy", Model)        
        <hr />*@
        <p>
            <input type="submit" value="Dodaj fakturę sprzedaży" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do kartoteki", "Kartoteka")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
