@model ZaplataFakturySprzedazy

@{
    ViewBag.Title = "Edycja zapłaty faktury sprzedaży";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = "Edycja zapłaty faktury sprzedaży.", SubTitle = "Edytuj zapłatę fakturę sprzedaży." })
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Zapłata faktury sprzedaży</legend>

        @Html.HiddenFor(model => model.Id)

        @Html.Partial("_ZaplataFakturySprzedazy", Model)

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do kartoteki", "Zaplaty", new { @idFakturySprzedazy = Model.IdFakturySprzedazy })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
