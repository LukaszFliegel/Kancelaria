@model Kontrahent

@{
    ViewBag.Title = "Usuwanie kontrahenta";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Usuwanie kontrahenta \"{0}\"", Model.KodKontrahenta), SubTitle = "Usuń kontrahenta." })
}
<h3>Czy na pewno chcesz usunąć kontrahenta?</h3>
<h4>@Model.KodKontrahenta</h4>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        @Html.HiddenFor(model => model.Id)

        <input type="submit" value="Usuń" />
    </p>
}

@Html.ActionLink("Powrót do kartoteki", "Kartoteka")