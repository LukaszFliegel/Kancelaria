@model Kontrahent

@{
    ViewBag.Title = "Dodawanie kontrahenta";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = "Dodawanie kontrahenta.", SubTitle = "Dodaj nowego kontrahenta." })
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Kontrahent</legend>

        @Html.Partial("_Kontrahent", Model)

        <hr />
        <p>
            <input type="submit" value="Dodaj kontrahenta" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do kartoteki", "Kartoteka")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}