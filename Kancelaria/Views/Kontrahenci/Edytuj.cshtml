@model Kontrahent

@{
    ViewBag.Title = "Edycja kontrahenta";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Edycja kontrahenta \"{0}\"", Model.KodKontrahenta), SubTitle = "Edytuj kontrahenta." })
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Kontrahent</legend>

        @Html.HiddenFor(model => model.Id)

        @Html.Partial("_Kontrahent", Model)

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do kartoteki", "Kartoteka")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
