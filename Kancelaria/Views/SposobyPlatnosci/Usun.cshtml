@model SposobPlatnosci

@{
    ViewBag.Title = "Usuwanie sposobu płatności";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Usuwanie sposobu płatności \"{0}\"", Model.KodSposobuPlatnosci), SubTitle = "Usuń sposób płatności." })
}
<h3>Czy na pewno chcesz usunąć sposób płatności?</h3>
<h4>@Model.KodSposobuPlatnosci</h4>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        @Html.HiddenFor(model => model.Id)

        <input type="submit" value="Usuń" />
    </p>
}

@Html.ActionLink("Powrót do kartoteki", "Kartoteka")