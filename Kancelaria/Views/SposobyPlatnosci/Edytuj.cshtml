@model SposobPlatnosci

@{
    ViewBag.Title = "Edycja sposobu płatności";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Edycja sposobu płatności \"{0}\"", Model.KodSposobuPlatnosci), SubTitle = "Edytuj sposób płatności." })
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Sposób płatności</legend>

        @Html.HiddenFor(model => model.Id)

        @Html.Partial("_SposobPlatnosci", Model)

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do kartoteki", "Kartoteka")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
