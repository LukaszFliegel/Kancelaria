@model ReportModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<small style="float:right">@DateTime.Now.ToShortDateString()</small>

<div class="kanc-print-head">
    <h2>@Model.Title</h2>
    @foreach(string subTitle in Model.SubTitleList)
    {
    <h4>@subTitle</h4>
    }
</div>
<div class="kanc-print-sub-head">
</div>
<div class="kanc-print-details">
    @RenderBody()
</div>
<div class="kanc-print-links">
    <p>
        <span class="button" onclick="window.print();">Drukuj</span>
    </p>
    <hr />
    <p>
        @Html.ActionLink("Powrót", "Index", "Raporty")
    </p>
</div>