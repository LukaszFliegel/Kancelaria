@model RokObrotowy

@{
    ViewBag.Title = "Usuwanie roku obrotowego";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Usuwanie rok obrotowy \"{0}\"", Model.NazwaRoku), SubTitle = "Usuń rok obrotowy." })
}

<h3>Czy na pewno chcesz usunąć rok obrotowy?</h3>
<h4>@Model.NazwaRoku</h4>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        @Html.HiddenFor(model => model.Id)

        <input type="submit" value="Usuń" />
    </p>
}

@Html.ActionLink("Powrót do kartoteki", "Kartoteka")