@model JednostkaMiary

@{
    ViewBag.Title = "Dodawanie nowej jednostki miary";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = "Dodawanie jednostki miary.", SubTitle = "Dodaj nową jednostkę miary." })
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Jednostka miary</legend>

        @Html.Partial("_JednostkaMiary", Model)
        <hr />
        <p>
            <input type="submit" value="Dodaj jednostkę miary" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do kartoteki", "Kartoteka")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
