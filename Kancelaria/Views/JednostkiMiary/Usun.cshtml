@model JednostkaMiary

@{
    ViewBag.Title = "Usuwanie jednostki miary";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Usuwanie jednostki miary \"{0}\"", Model.KodJednostkiMiary), SubTitle = "Usuń jednostkę miary." })
}
<h3>Czy na pewno chcesz usunąć jednostkę miary?</h3>
<h4>@Model.KodJednostkiMiary</h4>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        @Html.HiddenFor(model => model.Id)

        <input type="submit" value="Usuń" />
    </p>
}

@Html.ActionLink("Powrót do kartoteki", "Kartoteka")