@model Firma

@{
    ViewBag.Title = "Usuwanie firmy";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Usuwanie firmy \"{0}\"", Model.NazwaSkrocona), SubTitle = "Usuń firmę." })
}

<h3>Czy na pewno chcesz usunąć firmę?</h3>
<h4>@Model.NazwaSkrocona</h4>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        @Html.HiddenFor(model => model.Id)

        <input type="submit" value="Usuń" />
    </p>
}

@Html.ActionLink("Powrót do kartoteki", "Kartoteka")