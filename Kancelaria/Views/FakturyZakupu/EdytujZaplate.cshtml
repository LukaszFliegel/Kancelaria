@model ZaplataFakturyZakupu

@{
    ViewBag.Title = "Edycja zapłaty faktury zakupu";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = "Edycja zapłaty faktury zakupu.", SubTitle = "Edytuj zapłatę fakturę zakupu." })
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Zapłata faktury zakupu</legend>

        @Html.HiddenFor(model => model.Id)

        @Html.Partial("_ZaplataFakturyZakupu", Model)

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do kartoteki", "Zaplaty", new { @idFakturyZakupu = Model.IdFakturyZakupu })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
