@model Kancelaria.Models.Inwestycja

@{
    ViewBag.Title = "Usuwanie inwestycji";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Usuwanie inwestycji \"{0}\"", Model.NumerInwestycji), SubTitle = "Usuń inwestycję." })
}

<h3>Czy na pewno chcesz usunąć inwestycję?</h3>
<h4>@Model.NumerInwestycji</h4>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        @Html.HiddenFor(model => model.Id)

        <input type="submit" value="Usuń" />
    </p>
}

@Html.ActionLink("Powrót do kartoteki", "Kartoteka")