@model Inwestycja

@{
    ViewBag.Title = "Edycja inwestycji";
}

@section featured {
    @Html.Partial("_FeaturedSection", new FeaturedSectionModel() { Title = String.Format("Edycja inwestycji \"{0}\"", Model.NumerInwestycji), SubTitle = "Edytuj inwestycję." })
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Inwestycja</legend>

        @Html.HiddenFor(model => model.Id)

        @Html.Partial("_Inwestycja", Model)

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do kartoteki", "Kartoteka")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
